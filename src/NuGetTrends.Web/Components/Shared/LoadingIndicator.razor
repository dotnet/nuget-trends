@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div class="loading-screen-wrapper" style="display: @(_isVisible ? "block" : "none")">
    <div class="loading-screen-icon">
        <div class="loadchart">
            <div class="loadchart__bar"></div>
            <div class="loadchart__bar"></div>
            <div class="loadchart__bar"></div>
            <div class="loadchart__bar"></div>
            <div class="loadchart__bar"></div>
            <div class="loadchart__ball"></div>
        </div>
    </div>
</div>

@code {
    private bool _isVisible;
    private int _activeRequests;
    private CancellationTokenSource? _debounceTokenSource;
    private DotNetObjectReference<LoadingIndicator>? _dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _dotNetRef = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("loadingInterop.initialize", _dotNetRef);
        }
    }

    [JSInvokable]
    public async Task OnRequestStarted()
    {
        _activeRequests++;

        if (_activeRequests == 1)
        {
            // Debounce showing the loading indicator
            _debounceTokenSource?.Cancel();
            _debounceTokenSource = new CancellationTokenSource();

            try
            {
                await Task.Delay(200, _debounceTokenSource.Token);
                if (_activeRequests > 0)
                {
                    _isVisible = true;
                    await InvokeAsync(StateHasChanged);
                }
            }
            catch (TaskCanceledException)
            {
                // Ignore cancellation
            }
        }
    }

    [JSInvokable]
    public async Task OnRequestEnded()
    {
        _activeRequests = Math.Max(0, _activeRequests - 1);

        if (_activeRequests == 0)
        {
            _debounceTokenSource?.Cancel();
            _isVisible = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    /// <summary>
    /// Programmatically shows the loading indicator.
    /// </summary>
    public void Show()
    {
        _isVisible = true;
        StateHasChanged();
    }

    /// <summary>
    /// Programmatically hides the loading indicator.
    /// </summary>
    public void Hide()
    {
        _isVisible = false;
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        _debounceTokenSource?.Cancel();
        _debounceTokenSource?.Dispose();
        _dotNetRef?.Dispose();

        try
        {
            await JSRuntime.InvokeVoidAsync("loadingInterop.dispose");
        }
        catch (JSDisconnectedException)
        {
            // Ignore during shutdown
        }
    }
}
