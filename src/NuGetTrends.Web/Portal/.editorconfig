# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript files
[*.ts]
indent_size = 2

# JavaScript files
[*.js]
indent_size = 2

# HTML templates
[*.html]
indent_size = 2

# SCSS/CSS styles
[*.{scss,css}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
